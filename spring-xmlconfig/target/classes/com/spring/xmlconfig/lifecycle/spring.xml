<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

	<bean id="employee1" class="com.spring.xmlconfig.lifecycle.Employee"
		init-method="hey" destroy-method="bye">
		<property name="id" value="101"/>
		<property name="name" value="Raman"/>
		<property name="project" value="ING-Italy"/>
		<property name="city" value="nagpur"/>
	</bean>
	
	<bean id="employee2" class="com.spring.xmlconfig.lifecycle.Employee"
		init-method="hey" destroy-method="bye">
		<property name="id" value="103"></property>
		<property name="name" value="Rani"></property>
		<property name="project" value="ING-southafrica"></property>
		<property name="city" value="chennai"></property>	
	</bean>

</beans>
